doctype html

include ../components

block variables
  - const openGraf = true

html(lang="ru")
  head
    title= title
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="Мастерская Автоковрик — Пошив автоковриков на заказ — Индивидуальный пошив ворсовых и EVA автоковриков для всех моделей автомобилей. Работаем с 2013 года. Доставка по России и СНГ.")

    //- генерируйте favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"
    link(rel="icon", type="image/png", href="/favicon/favicon-96x96.png", sizes="96x96")
    link(rel="icon", type="image/svg+xml", href="/favicon/favicon.svg")
    link(rel="shortcut icon", href="/favicon/favicon.ico")
    link(rel="apple-touch-icon", sizes="180x180", href="/favicon/apple-touch-icon.png")
    meta(name="apple-mobile-web-app-title", content="kovrik72")
    link(rel="manifest", href="/favicon/site.webmanifest")

    //- используйте только для шрифта находящегося на первом экране
    // - link(rel="preload", href="fonts/placeholder.woff2", as="font", crossorigin="anonymous")

    //- При необходимости вы можете добавить разметку Open graf. - const Open graf = true
    if (openGraf)
      //- Обязательно измените содержание контента на тот что необходим!
      //- Введите заголовок
      meta(property="og:title", content="Мастерская Автоковрик")
      //- Введите заголовок путь к картинке
      meta(property="og:image", content="https://kovrik72.ru/wp-content/uploads/2021/06/D74v7RH-300x171.jpg")
      //- Введите необходимый тип
      meta(property="og:type", content="article")
      //- Введите адрес сайта
      meta(property="og:url", content="http://kovrik72.ru")
      //- Введите описание
      meta(property="og:description", content="Пошив автоковриков на заказ — Индивидуальный пошив ворсовых и EVA автоковриков для всех моделей автомобилей. Работаем с 2013 года. Доставка по России и СНГ.")

    link(rel="stylesheet", href="css/style-critical.min.css")
    link(rel="stylesheet", href="css/style.min.css")

  body
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods, currentUrl)

    block modals

    script(src="js/vendor.min.js", defer)
    script(src="js/maincritical.min.js", defer)
    script(src="js/main.min.js", defer)
