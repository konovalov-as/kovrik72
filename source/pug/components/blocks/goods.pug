    //- все блоки содержат в себе container без доп класса tutorial__wrapper
    .container
      h2.title-h2 Виды материалов
      .goods__box.tabs(data-tabs='parent', data-price-tabs='price-parent', data-accordion-media='(max-width:767px)')
        .tabs__controls.goods__tabs-controls(data-tabs='controls')
